########################################
# get all platform/OS
PLATFORM = i686
OS = `uname`

########################################
# set platform/OS-specific variables
CPP_i686 = /usr/bin/g++ -std=c++17
LDFLAGS_i686 =  -lpthread
CPPFLAGS_i686 = -DX86 -DLINUX
MFLAGS_i686 = -j2
 
########################################
# set initial values for the core variables

# dirs to use
SRC_DIR = ./src
SRC_DOCS_DIR = ./docs

TARGET_DIR = ./target
OBJ_DIR = ./target/obj
TARGET_DOCS_DIR = ./target/docs

# compiler and linker
CPP = $(CPP_${PLATFORM})
LDFLAGS = $(LDFLAGS_${PLATFORM})
MFLAGS = $(MFLAGS_${PLATFORM})


########################################
# set the build profile (default=normal)
CPPFLAGS_normal  =  -ggdb -O3
CPPFLAGS_fast    =  -DNDEBUG -O3
CPPFLAGS_debug   =  -ggdb -O0
CPPFLAGS_gp0     =  -ggdb -pg -O0
CPPFLAGS_gp      =  -ggdb -pg -O3
ifeq ($(PROFILE), )
    PROFILE = debug
endif
CPPFLAGS += $(CPPFLAGS_${PROFILE})

